    <script>
        const alertMessage = (text) => {
            const msg = document.createElement('div');
            msg.className = 'msg';

            const msgContent = document.createElement('div');
            msgContent.className = 'msg-content';
            msgContent.textContent = text;

            msg.appendChild(msgContent);
            document.body.appendChild(msg);

            setTimeout(() => {
                if (document.body.contains(msg)) {
                    document.body.removeChild(msg);
                }
            }, 1500);
        };

        const amount = "<%= Amount %>";

        const callPaymentApi = async (url) => {
            try {
                alertMessage("Processing...");

                const response = await axios.post(url, { money: amount });

                if (!response?.data || response.data.status === false) {
                    alertMessage(response?.data?.message || "Failed!");
                    return;
                }

                alertMessage("Redirecting...");

                if (response.data.paymentUrl) {
                    window.location.href = response.data.paymentUrl;
                    return;
                }

                if (response.data.url) {
                    window.location.href = response.data.url;
                    return;
                }

                alertMessage("Payment URL not found!");

            } catch (err) {
                console.error(err);
                alertMessage("Something went wrong!");
            }
        };

        // CLICK EVENTS
        document.getElementById("upi1").addEventListener("click", () => {
            callPaymentApi("/wallet/paynow/manual_upi_request"); // LG PAY
        });

        document.getElementById("upi2").addEventListener("click", () => {
            callPaymentApi("/wallet/paynow/manual_upi_request/watch"); // BOND PAY
        });

        document.getElementById("upi3").addEventListener("click", () => {
            callPaymentApi("/wallet/paynow/watch_now"); 
        });
    </script>

