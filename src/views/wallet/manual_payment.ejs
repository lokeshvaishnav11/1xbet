        footer {
            background-color: #f2f2f2;
            padding: 6px;
            text-align: center;
            border-top-left-radius: 12px;
            border-top-right-radius: 12px;
            margin: 0px 10px;
            margin-top: auto;
        }

        .verification_form__root {
            display: flex;
            flex-direction: column;
            gap: 10px;
            background: #f2f2f2;
            padding: 15px 25px 25px;
            margin: 15px 10px;
            border-radius: 12px;
        }

        .verification_form__root label {
            font-weight: 600;
        }

        .verification_form__root input {
            padding: 10px 13px;
            border-radius: 9px;
            border: 1px solid #ccc;
            font-size: 14px;
        }

        /* UPI SECTION */
        .upi-container {
            display: flex;
            gap: 15px;
            margin-top: 10px;
        }

        .upi-box {
            flex: 1;
            background: #fff;
            border-radius: 12px;
            padding: 15px;
            text-align: center;
            cursor: pointer;
            border: 1px solid #ccc;
            transition: 0.2s;
        }

        .upi-box:hover {
            border-color: #1c4ff7;
            transform: scale(1.03);
        }

        .upi-box img {
            width: 80px;
        }

        .upi-box p {
            margin-top: 8px;
            font-weight: 600;
        }

        .upi-note {
            margin-top: 12px;
            font-size: 13px;
            color: #333;
        }

        /* TOAST */
        .msg {
            position: fixed;
            left: 50%;
            top: 30px;
            transform: translateX(-50%);
            z-index: 9999;
        }

        .msg-content {
            background: #000;
            color: #fff;
            padding: 10px 14px;
            border-radius: 10px;
            font-size: 14px;
        }
    </style>

